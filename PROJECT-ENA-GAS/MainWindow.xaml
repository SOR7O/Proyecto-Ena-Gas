<Window x:Class="PROJECT_ENA_GAS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROJECT_ENA_GAS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="0" Grid.Row="0" Width="200" Height="50" Name="txtCantidad"/>
        <TextBox Grid.Column="1" Grid.Row="0" Width="200" Height="50" Name="txtid"/>
        <Button Grid.Column="0" Grid.Row="1" Content="Agregar" Width="100" Height="30" Click="Button_Click"/>
        <DataGrid Name="dt" Grid.Row="1" Grid.Column="1"/>
        <ComboBox Grid.Column="2" Grid.Row="0" Name="cmbLista" Width="200" Height="20"/>
    </Grid>
</Window>
